{
  "name": "inky",
  "productName": "Inky",
  "version": "0.15.1",
  "description": "An editor for ink",
  "main": "main-process/main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inkle/inky.git"
  },
  "scripts": {
    "postinstall": "node ../build/createDocumentnavigation.js && markdown-html resources/Documentation/WritingWithInk.md -s resources/Documentation/documentation.css -o renderer/documentation/embedded.html",
    "start": "electron main-process/main.js",
    "test": "./node_modules/mocha/bin/mocha --timeout 30000",
    "test:unit": "node test/bidify.test.js",
    "test:e2e": "xvfb-run ./node_modules/mocha/bin/mocha --timeout 30000",
    "test:bidi": "xvfb-run ./node_modules/mocha/bin/mocha test/bidi-e2e.test.js --timeout 90000",
    "generate-locale": "node ../build/generateLocale.js",
    "build-package": "node build-package.js"
  },
  "keywords": [
    "ink",
    "narrative",
    "editor"
  ],
  "author": "inkle Ltd",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/inkly/inky/issues"
  },
  "homepage": "http://www.inklestudios.com/ink",
  "dependencies": {
    "chokidar": "^3.6.0",
    "fuzzaldrin-plus": "^0.6.0",
    "inkjs": "^2.4.0",
    "lodash": "^4.17.23",
    "mkdirp": "^3.0.1",
    "randomstring": "^1.3.1"
  },
  "devDependencies": {
    "@electron/packager": "^18.3.2",
    "chai": "^5.1.1",
    "chai-as-promised": "^7.1.2",
    "electron": "^30.0.4",
    "jsdom": "^24.0.0",
    "markdown-html": "^0.0.8",
    "mocha": "^10.4.0",
    "playwright-core": "^1.58.2"
  },
  "optionalDependencies": {
    "appdmg": "^0.6.6"
  }
}
